@model DEMO.Models.AssignedCourse
@using DEMO.Resources
@using Microsoft.AspNetCore.Localization


@inject LocService SharedLocalizer
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>@SharedLocalizer.GetLocalizedHtmlString("Delete")</h1>

<h3>@SharedLocalizer.GetLocalizedHtmlString("IfDeleteSureCourse")</h3>
<div>
    <h4>Assigned Course</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @SharedLocalizer.GetLocalizedHtmlString("CourseId")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer.GetLocalizedHtmlString("CourseDate")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.courseDate)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="submit" value=@SharedLocalizer.GetLocalizedHtmlString("Delete") class="btn btn-danger" /> |
        <a asp-action="Index" class="btn-outline-info">@SharedLocalizer.GetLocalizedHtmlString("BackList")</a>
    </form>
</div>
