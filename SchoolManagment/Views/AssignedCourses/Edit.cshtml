@model DEMO.Models.AssignedCourse
@using DEMO.Resources
@using Microsoft.AspNetCore.Localization


@inject LocService SharedLocalizer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var teachers = (IList<DEMO.Models.Teacher>)ViewData["teachers"];
    var courses = (IList<DEMO.Models.Course>)ViewData["courses"];
}

<h1>@SharedLocalizer.GetLocalizedHtmlString("Edit")</h1>

<h4>@SharedLocalizer.GetLocalizedHtmlString("Course")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Id" class="control-label"> @SharedLocalizer.GetLocalizedHtmlString("CourseId")</label>
                <input readonly asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="courseDate" class="control-label">@SharedLocalizer.GetLocalizedHtmlString("CourseDate")</label>
                <input asp-for="courseDate" class="form-control" />
                <span asp-validation-for="courseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="course">@SharedLocalizer.GetLocalizedHtmlString("Course")</label>

                <select name="course" asp-for="course" class="form-control" asp-items='new SelectList(courses, "Id", "courseName")'>
                </select>
                <span asp-validation-for="course" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="teacher">@SharedLocalizer.GetLocalizedHtmlString("Teacher")</label>

                <select name="teacher" asp-for="teacher" class="form-control" asp-items='new SelectList(teachers, "Id", "name");'>
                </select>
                <span asp-validation-for="teacher" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value=@SharedLocalizer.GetLocalizedHtmlString("Save") class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index" class="btn-outline-info">@SharedLocalizer.GetLocalizedHtmlString("BackList")</a>
            </div>
        </form>
    </div>
</div>
