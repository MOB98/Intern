@model DEMO.Models.Student
@using DEMO.Resources
@using Microsoft.AspNetCore.Localization


@inject LocService SharedLocalizer
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    @SharedLocalizer.GetLocalizedHtmlString("Details")</h1>

<div>
    <h4>
        @SharedLocalizer.GetLocalizedHtmlString("Student")</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @SharedLocalizer.GetLocalizedHtmlString("StudentId")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @SharedLocalizer.GetLocalizedHtmlString("StudentName")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.name)
            </dd>
            <dt class="col-sm-2">
                @SharedLocalizer.GetLocalizedHtmlString("StudentPhone")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.phonenumber)
            </dd>
            <dt class="col-sm-2">
                @SharedLocalizer.GetLocalizedHtmlString("StudentAddress")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.address)
            </dd>
        </dl>
</div>
<div>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-info">@SharedLocalizer.GetLocalizedHtmlString("Edit")</a>
    <a asp-action="Index" class="btn btn-outline-info"> @SharedLocalizer.GetLocalizedHtmlString("BackList")</a>


</div>
