@model IEnumerable<DEMO.Models.Student>
@using DEMO.Resources
@using Microsoft.AspNetCore.Localization


@inject LocService SharedLocalizer
@{
    ViewData["Title"] = "Index";
 Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    @SharedLocalizer.GetLocalizedHtmlString("All Students")
</h1>

<p>
    <a asp-action="Create" class="btn btn-info ">@SharedLocalizer.GetLocalizedHtmlString("Create")</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @SharedLocalizer.GetLocalizedHtmlString("StudentId")  @*@Html.DisplayNameFor(model => model.Id)*@
            </th>
            <th>
                @SharedLocalizer.GetLocalizedHtmlString("StudentName")  @*@Html.DisplayNameFor(model => model.name)*@
            </th>
            <th>
                @SharedLocalizer.GetLocalizedHtmlString("StudentAddress")    @*@Html.DisplayNameFor(model => model.address)*@
            </th>
            <th>
                @SharedLocalizer.GetLocalizedHtmlString("StudentPhone")    @*@Html.DisplayNameFor(model => model.phonenumber)*@

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phonenumber)

                </td>
                <td>
                    @Html.ActionLink(@SharedLocalizer.GetLocalizedHtmlString("Edit"), "Edit", new {  id = item.Id }) |
                    @Html.ActionLink(@SharedLocalizer.GetLocalizedHtmlString("Details"), "Details", new
                    {
                        id = item.Id
    }) |
                    @Html.ActionLink(@SharedLocalizer.GetLocalizedHtmlString("Delete"), "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
