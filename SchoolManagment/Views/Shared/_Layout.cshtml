@using DEMO.Resources
@using Microsoft.AspNetCore.Localization


@inject LocService SharedLocalizer

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">School Managment</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">@SharedLocalizer.GetLocalizedHtmlString("Home") <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Students">@SharedLocalizer.GetLocalizedHtmlString("Students")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Teachers">@SharedLocalizer.GetLocalizedHtmlString("Teachers")</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="~/Courses">@SharedLocalizer.GetLocalizedHtmlString("Courses")</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="~/AssignedCourses">@SharedLocalizer.GetLocalizedHtmlString("Assigned Courses")</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="~/Roles">@SharedLocalizer.GetLocalizedHtmlString("Role")</a>
                </li>


                <li class="nav-item">
                    @await Html.PartialAsync("_SelectLanguagePartial")
                </li>



                <li class="nav-item" style="margin-left:550px">
                    <a class="nav-link" href="~/Identity/Account/login">@SharedLocalizer.GetLocalizedHtmlString("Signin")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Identity/Account/register">@SharedLocalizer.GetLocalizedHtmlString("Register")</a>
                </li>
            </ul>
            @*<form class="form-inline my-2 my-lg-0" asp-action="Search" asp-controller="Student">
                    <input class="form-control mr-sm-2" name="term" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>*@
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>

</body>
</html>
